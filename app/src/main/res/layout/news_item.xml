<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    app:cardCornerRadius="@dimen/radius"
    app:cardBackgroundColor="@color/card_view_bg"
    android:layout_marginTop="@dimen/newsTitleMarginSize"
    android:layout_marginLeft="@dimen/newsTitleMarginSize"
    android:layout_marginRight="@dimen/newsTitleMarginSize">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/news_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/newsListMarginSize"
            android:paddingTop="@dimen/newsListMarginSize"
            android:ellipsize="end"
            android:maxEms="200"
            android:textColor="@color/news_item_nViewed"
            android:textSize="@dimen/newsListTitleSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <TextView
                android:id="@+id/news_list_content"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="@dimen/newsListMarginSize"
                android:layout_marginTop="@dimen/newsListMarginSize"
                android:ellipsize="end"
                android:maxLines="5"
                android:textColor="@color/news_item_nViewed"
                android:textSize="@dimen/newsListContentSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/newsListMarginSize"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/news_list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/newsListMarginSize"
                android:layout_marginTop="@dimen/newsListMarginSize"
                android:textColor="@color/news_item_nViewed"
                android:textSize="@dimen/newsListTimeSize" />

            <TextView
                android:id="@+id/news_list_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="@dimen/newsListMarginSize"
                android:textColor="@color/news_item_nViewed"
                android:textSize="@dimen/newsListTimeSize" />
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>


