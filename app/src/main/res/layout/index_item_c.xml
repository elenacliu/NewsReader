<?xml version="1.0" encoding="utf-8"?>
<!--后续需要给每一项设置颜色-->
<com.google.android.material.card.MaterialCardView
    android:id="@+id/cardview_index"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    app:cardCornerRadius="@dimen/radius"
    app:strokeColor="@color/color_c">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_index_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="c"
            android:padding="2dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="@dimen/indexSize"
            android:background="@color/color_c"/>

        <TextView
            android:id="@+id/tv_c_num"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:padding="2dp"
            android:gravity="center"
            android:text="48"
            android:textColor="@color/color_c"
            android:textSize="@dimen/indexSize"
            android:layout_toRightOf="@+id/tv_index_name" />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>